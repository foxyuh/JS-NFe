{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": false, // true
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": false, // true

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, // true
    "isolatedModules": false, // true
    "moduleDetection": "force",
    "noEmit": false, // true

    /* Linting */
    "strict": false, // true
    "noUnusedLocals": false, // true
    "noUnusedParameters": false, // true
    "noFallthroughCasesInSwitch": false, // true
    "noUncheckedSideEffectImports": false // true
  },
  "include": ["src", "vite-env.d.ts"]
}
